<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="hud" controller="game.states.GameAppState">
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="infoBar" backgroundColor="#555F" width="100%" height="32px" padding="2px" childLayout="horizontal">
                <panel id="hungerContainer" backgroundColor="#000F" width="102px" height="26px" padding="1px" childLayout="horizontal">
                    <panel id="hunger" backgroundColor="#A00F" width="100px" height="24px" padding="1px" valign="center" childLayout="center"> 
                        <text id="hungerText" color="#FFF" font="aurulent-sans-16.fnt" text="NaN" align="center" valign="center" />
                    </panel>
                </panel>
                <panel id="thirstContainer" backgroundColor="#000F" width="102px" height="26px" padding="1px" childLayout="horizontal">
                    <panel id="thirst" backgroundColor="#00AF" width="100px" height="24px" padding="1px" valign="center" childLayout="center"> 
                        <text id="thirstText" color="#FFF" font="aurulent-sans-16.fnt" text="NaN" align="center" valign="center" />
                    </panel>
                </panel>
                <panel id="energyContainer" backgroundColor="#000F" width="102px" height="26px" padding="1px" childLayout="horizontal">
                    <panel id="energy" backgroundColor="#0A0F" width="100px" height="24px" padding="1px" valign="center" childLayout="center"> 
                        <text id="energyText" color="#FFF" font="aurulent-sans-16.fnt" text="NaN" align="center" valign="center" />
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
